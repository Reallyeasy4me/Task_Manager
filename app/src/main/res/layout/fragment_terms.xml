<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Здесь размещается текст Положений и Условий Пользования в ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_and_conditions_text" />
    </ScrollView>

    <!-- Кнопка "Вернуться" -->
    <Button
        android:id="@+id/buttonReturnToSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вернуться к настройкам"
        android:layout_marginBottom="16dp"/> <!-- Отступ снизу -->

</LinearLayout>
